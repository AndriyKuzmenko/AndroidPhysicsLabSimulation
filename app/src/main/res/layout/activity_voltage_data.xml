<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <ScrollView
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="15px" />

            <TextView
                android:id="@+id/epsilonLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Electromotive Force (Volt)"
                android:textColor="#06073E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/epsilonET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:inputType="numberDecimal"
                android:textColor="#06073E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15px" />

            <TextView
                android:id="@+id/internalRLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Internal Resistannce (Ohm)"
                android:textColor="#06073E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/internalRET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:inputType="numberDecimal"
                android:textColor="#06073E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15px" />

            <TextView
                android:id="@+id/maxRLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Maximum resistance (Ohm)"
                android:textColor="#06073E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/maxRET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:inputType="numberDecimal"
                android:textColor="#06073E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30px" />

            <Button
                android:id="@+id/startVoltageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="start"
                android:text="Start" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15px" />

            <Button
                android:id="@+id/backToMenuButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="back"
                android:text="Back" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15px" />
        </LinearLayout>
    </ScrollView>

    <Space
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1" />
</LinearLayout>