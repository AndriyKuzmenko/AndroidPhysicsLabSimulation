<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <ScrollView
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="15px" />

            <TextView
                android:id="@+id/mass1Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Mass on desk (kg)"
                android:textColor="#06073E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/mass1ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:inputType="numberDecimal"
                android:textColor="#06073E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15px" />

            <TextView
                android:id="@+id/mass2Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Mass in air (kg)"
                android:textColor="#06073E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/mass2ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:inputType="numberDecimal"
                android:textColor="#06073E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15px" />

            <TextView
                android:id="@+id/frictionLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="coefficient of friction"
                android:textColor="#06073E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/frictionET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:inputType="numberDecimal"
                android:textColor="#06073E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15px" />

            <Spinner
                android:id="@+id/planetNewtonSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30px" />

            <Button
                android:id="@+id/startNewtonButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:onClick="start"
                android:text="Start"
                android:textColor="#06073E"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15px" />

            <Button
                android:id="@+id/backToMenuButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="back"
                android:fontFamily="serif"
                android:text="Back"
                android:textColor="#06073E"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15px" />
        </LinearLayout>
    </ScrollView>

    <Space
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1" />
</LinearLayout>