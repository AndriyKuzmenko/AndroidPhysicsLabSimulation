<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CollisionData">

    <Space
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <ScrollView
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="15px" />

            <TextView
                android:id="@+id/railHeightLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Rail height (m)"
                android:textColor="#06073E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/railHeightET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:inputType="numberDecimal"
                android:textColor="#06073E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15px" />

            <TextView
                android:id="@+id/tableHeightLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Table Height (m)"
                android:textColor="#06073E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tableHeightET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:inputType="numberDecimal"
                android:textColor="#06073E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15px" />

            <Spinner
                android:id="@+id/planetCollisionSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15px" />

            <ToggleButton
                android:id="@+id/wideTallToggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ToggleButton"
                android:textOff="wide"
                android:textOn="tall" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30px" />

            <Button
                android:id="@+id/startCollisionButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="start"
                android:text="Start" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15px" />

            <Button
                android:id="@+id/backToMenuButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="back"
                android:text="Back" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15px" />
        </LinearLayout>
    </ScrollView>

    <Space
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1" />
</LinearLayout>